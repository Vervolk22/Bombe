        <TextBox x:Name="mainlist" HorizontalAlignment="Left" Height="350" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="310" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
        <TextBox x:Name="port" HorizontalAlignment="Left" Height="25" Margin="470,150,0,0" TextWrapping="Wrap" Text="6133" VerticalAlignment="Top" Width="73"/>
