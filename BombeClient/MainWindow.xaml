        Title="MainWindow" Height="400" Width="600" Left="730" Top="20" Background="LightBlue">
    <Grid>
        <DockPanel Background="AliceBlue" HorizontalAlignment="Left" Height="350" LastChildFill="False" Margin="325,10,0,0" VerticalAlignment="Top" Width="246">
            </DockPanel>
