                    <TextBox Name="offset4" HorizontalAlignment="Left" Margin="20,0,20,0" Height="25" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="50" TextChanged="validateOffset" BorderThickness="2"/>

