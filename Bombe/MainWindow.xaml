                        <TextBox Name="notch2" HorizontalAlignment="Left" Margin="20,19,0,0" Height="35" TextWrapping="Wrap" Text="E" VerticalAlignment="Top" Width="50" TextChanged="validateNotch" BorderThickness="2"/>

