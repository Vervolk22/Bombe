                        <TextBox Name="notch7" HorizontalAlignment="Left" Margin="20,19,0,0" Height="35" TextWrapping="Wrap" Text="A" VerticalAlignment="Top" Width="50" Visibility="Collapsed" TextChanged="validateNotch" BorderThickness="2"/>

                        <Label Name="pos8" Content="8:" Margin="20,19,0,0" Height="35" Width="35" Visibility="Collapsed"/>
