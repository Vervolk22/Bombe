                <TextBox Name="message" HorizontalAlignment="Left" Margin="188,387,0,0" Height="35" TextWrapping="Wrap" Text="SZLD YQ WFF CFZNFC" VerticalAlignment="Top" Width="362" TextChanged="validateMessage" BorderThickness="2"/>
